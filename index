    <meta property="og:title" content="أهم صفقات الأهلى فى 2024"/>
    <meta property="og:description" content="حسم صفقة جديدة لتدعيم خط الدفاع"/>
    <title>We-Choses-To-You</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            direction: rtl; /* لجعل النص من اليمين إلى اليسار */
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .board {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin: 20px;
            max-width: 300px;
            text-align: center;
            transition: transform 0.3s;
            flex: 1 1 calc(33.333% - 40px); /* 3 boards لكل صف */
            box-sizing: border-box;
        }

        .board:hover {
            transform: translateY(-10px);
        }

        .board img {
            width: 100%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .board h3 {
            margin: 15px 0;
        }

        .board p {
            padding: 0 15px 15px;
            color: #555;
        }

        .board a {
            text-decoration: none;
            color: inherit;
        }

        @media (max-width: 768px) {
            .board {
                flex: 1 1 calc(50% - 40px); /* 2 boards لكل صف على الشاشات الصغيرة */
            }
        }

        @media (max-width: 480px) {
            .board {
                flex: 1 1 100%; /* 1 board لكل صف على الهواتف */
            }
        }
    </style>
