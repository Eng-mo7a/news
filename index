<body>
    <div class="container"></div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const links = [
                'https://public.amwaly.com/blog/118758/%D8%A7%D9%87%D9%85-%D8%B5%D9%81%D9%82%D8%A7%D8%AA-%D8%A7%D9%84%D8%A3%D9%87%D9%84%D9%89-%D9%81%D9%89-2024'
            ];

            const container = document.querySelector('.container');
            const scriptURL = 'https://script.google.com/macros/s/AKfycbxeke0k8WNqaU6Gw1BdfpegcLoLZ-4mzifKN9Zujb2p2nq2ALPsRaJnMZhoOZT-bGZLSw/exec'; // استبدل هذا بالـ URL الخاص بتطبيق Google Apps Script

            links.forEach(link => {
                fetch(`${scriptURL}?url=${encodeURIComponent(link)}`)
                    .then(response => response.json())
                    .then(data => {
                        const board = document.createElement('div');
                        board.classList.add('board');
                        board.innerHTML = `
                            <a href="${link}" target="_blank">
                                <img src="${data.image}" alt="${data.title}">
                                <h3>${data.title}</h3>
                                <p>${data.description}</p>
                            </a>
                        `;
                        container.appendChild(board);
                    })
                    .catch(error => console.error('Error fetching the article:', error));
            });
        });
    </script>
</body>
</html>
